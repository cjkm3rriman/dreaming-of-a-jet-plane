{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run fastapi dev app/main.py --host 0.0.0.0 --port 8000 &"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "pkill -f 'fastapi dev'"
          }
        ]
      }
    ]
  }
}